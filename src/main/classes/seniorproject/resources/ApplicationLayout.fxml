<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="importXMLButon" mnemonicParsing="false" text="Import XML" />
                  <MenuItem mnemonicParsing="false" text="Export CSV" />
                  <MenuItem mnemonicParsing="false" text="Export PNG" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem mnemonicParsing="false" text="Layout" />
                  <MenuItem mnemonicParsing="false" text="Fonts" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.5306406685236769" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <items>
            <HBox>
               <children>
                  <VBox prefHeight="365.0" prefWidth="333.0">
                     <children>
                        <ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox fx:id="waveformLayers" prefWidth="335.0" scaleShape="false" spacing="5.0">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                                 <children>
                                    <ToolBar fx:id="waveformLayerTemplate" prefWidth="335.0" VBox.vgrow="ALWAYS">
                                      <items>
                                          <Button mnemonicParsing="false" text="X">
                                             <tooltip>
                                                <Tooltip text="Delete Layer" />
                                             </tooltip>
                                          </Button>
                                          <TextField promptText="Waveform Name" />
                                          <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="^">
                                             <tooltip>
                                                <Tooltip text="Move Up One Layer" />
                                             </tooltip>
                                          </Button>
                                          <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="V">
                                             <tooltip>
                                                <Tooltip text="Move Down One Layer" />
                                             </tooltip>
                                          </Button>
                                          <ColorPicker prefHeight="30.0" prefWidth="30.0">
                                             <value>
                                                <Color />
                                             </value>
                                             <tooltip>
                                                <Tooltip text="Select Waveform Color" />
                                             </tooltip>
                                          </ColorPicker>
                                          <CheckBox mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" selected="true">
                                             <tooltip>
                                                <Tooltip text="Toggle Waveform Visability" />
                                             </tooltip>
                                          </CheckBox>
                                      </items>
                                    </ToolBar>
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <ScatterChart fx:id="waveformChart" alternativeColumnFillVisible="true" animated="false" legendSide="LEFT" legendVisible="false" HBox.hgrow="ALWAYS">
                    <xAxis>
                      <CategoryAxis label="Time (ps)" prefHeight="22.0" prefWidth="972.0" side="LEFT" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis label="Current (A)" />
                    </yAxis>
                  </ScatterChart>
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" SplitPane.resizableWithParent="false">
               <content>
                  <VBox prefHeight="356.0" prefWidth="921.0">
                     <children>
                        <TableView focusTraversable="false" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn editable="false" minWidth="190.0" prefWidth="263.0" sortable="false" text="Property" />
                            <TableColumn editable="false" minWidth="300.0" prefWidth="1013.0" sortable="false" text="Value" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </ScrollPane>
        </items>
      </SplitPane>
   </children>
</VBox>
