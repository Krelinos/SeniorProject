<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.paint.Color?>

<ToolBar prefWidth="335.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <Button fx:id="closeButton" mnemonicParsing="false" text="X">
         <tooltip>
            <Tooltip text="Delete layer&#10;(Shift-click) Delete all except this" />
         </tooltip>
      </Button>
      <TextField fx:id="waveformName" promptText="Waveform Name" />
      <Button fx:id="upButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="^">
         <tooltip>
            <Tooltip text="Move up one layer&#10;(Shift-click) Move to top" />
         </tooltip>
      </Button>
      <Button fx:id="downButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="V">
         <tooltip>
            <Tooltip text="Move down one layer&#10;(Shift-click) Move to bottom" />
         </tooltip>
      </Button>
      <ColorPicker fx:id="colorPicker" prefHeight="30.0" prefWidth="30.0">
         <value>
            <Color />
         </value>
         <tooltip>
            <Tooltip text="Select waveform color" />
         </tooltip>
      </ColorPicker>
      <CheckBox fx:id="visibilityCheckBox" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" selected="true">
         <tooltip>
            <Tooltip text="Toggle waveform visability&#10;(Shift-click) Hide all except this" />
         </tooltip>
      </CheckBox>
   </items>
</ToolBar>
